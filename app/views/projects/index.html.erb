<h1>Listing projects</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% current_user.projects.each do |project| %>
    <ul class="thumbnails">
      <li class="span4">
        <div class="thumbnail">
          <div style="display:inline-block">
            <%= image_tag(project.image_url, class: 'list_image') %>
            <div class="pull-right">
              <p><%= link_to 'Show', project %></p>
              <p><%= link_to 'Edit', edit_project_path(project) %></p>
              <p><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></p>
            </div>
            <h3><%= project.name %></h3>
            <p><%= truncate(strip_tags(project.description), length: 80) %></p>
          </div>
        </div>
      </li>
    </ul> 
    <% end %>
  </tbody>
</table>

<%= will_paginate @project, renderer: BootstrapPagination::Rails %>

<br>
<%= link_to 'New Project', new_project_path %>
