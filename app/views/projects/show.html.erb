				  <div class="modal-footer">
				    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
				    <button class="btn btn-primary">Save changes</button>
				  </div>
				</div>
		    <%end%>
	    </div>
	 </div>
	
<br>
<%= link_to 'Add User Story', new_project_story_path(@project, Story.new), style: 'color:white' %>
<%= link_to 'Edit', edit_project_path(@project) , style: 'color:white'%> 
<%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' } , style: 'color:white' %>
<%= link_to 'Back', projects_path, style: 'color:white' %>
<%= form_tag add_user_project_path(@project) do %> 
	<div class="form-group">
		<%= text_field_tag placeholder: 'Enter Email' , class: 'form-control' %>
		<%= submit_tag("Add User", class: 'btn btn-default active') %>
	</div>
<% end %>
