<p id="notice"><%= notice %></p>

<div class="bs-docs-example " style="padding-bottom: 24px;padding-top: 24px;">
	<a data-toggle="modal" href="#" class="btn btn-primary btn-large"><%=@project.name%></a>
</div>
<div class="row">
  <div class="col-xs-3 col-sm-3" style="background:#e3e3e3;border-radius:3px; box-sizing:border-box; padding-right:300px ;position:relative;">
	
	<div class="row" style="padding: 6px 8px 4px;"><b>To Do</b></div>
  	<% @project.stories.each do |story| %>

	  	<%if story.state='to do' %>

