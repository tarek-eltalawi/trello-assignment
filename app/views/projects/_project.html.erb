<div class="bs-example" style="padding-top:80px">	
		<h3 style="text-align:center; color:white"><b><i>To Do</i></b></h3>
	    <div class="list-group">
	    	<% @project.stories.each do |story| %>
		    	
		    		<%if story.state=='to do' %>
			    		<%if story.tasks.empty? %>
					      <div class="dropdown active">
		              <a class="btn btn-lg btn-primary dropdown-toggle" id="drop5" role="button" data-toggle="dropdown" href="#">change state <b class="caret"></b></a>
		              <ul id="menu2" class="dropdown-menu" role="menu" aria-labelledby="drop5">
		                <li role="presentation"><%= link_to 'Doing',  doing_project_story_path(@project, story), method: :post , remote: true %></li>
		                <li role="presentation"><%= link_to 'Done', done_project_story_path(@project, story) , method: :post , remote: true %></li>
		              </ul>
		            </div>
					      <a href="#empty" data-toggle="modal" data-target="#empty" class="list-group-item" style="background-color:#DCB6F1; width:100%">
					        <h4 class="list-group-item-heading" style="color:#27709b"><%=story.name%></h4>
					        <p class="list-group-item-text" style="color:#27709b"><%=story.description%></p>
					      </a>
					      <br>
					    <% else %>
					      <div class="dropdown active">
		              <a class="btn btn-lg btn-primary dropdown-toggle" id="drop5" role="button" data-toggle="dropdown" href="#">change state <b class="caret"></b></a>
		              <ul id="menu2" class="dropdown-menu" role="menu" aria-labelledby="drop5">
		                <li role="presentation"><%= link_to 'Doing', doing_project_story_path(@project, story) , method: :post, remote: true %></li>
		                <li role="presentation"><%= link_to 'Done', done_project_story_path(@project, story) ,method: :post, remote: true %></li>
		              </ul>
		            </div>
					      <a href="#<%=story.id%>" data-toggle="modal" data-target="#<%=story.id%>" class="list-group-item" style="background-color:#DCB6F1;width:100% ">
						     		<h4 class="list-group-item-heading" style="color:#27709b"><%=story.name%></h4>
						        <p class="list-group-item-text" style="color:#27709b"><%=story.description%></p>
					      </a>
					      <br>
					    <%end%>
					    <!-- empty Modal -->
				    	<div class="modal fade" id="empty" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
							  <div class="modal-dialog">
							    <div class="modal-content">
							      <div class="modal-header">
							        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
							        <h4 class="modal-title" id="myModalLabel">This story is empty</h4><br>
							      </div>
							      <div class="modal-body">
							     	<%= button_to 'Add Tasks', new_project_story_task_path(@project, story, Task.new), method: :get, class: 'btn btn-primary btn-lg btn-block', style: 'float:right;	background-color:#d9534f' %>
							     	<%= link_to "." %>
							     	<%= button_to 'Edit story', edit_project_story_path(@project, story), method: :get, class: 'btn btn-primary btn-lg btn-block', style: 'float:right;	background-color:#d9534f' %>
							      </div>
							      <br><br>
							      <div class="modal-footer">
							        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
							        <button type="button" class="btn btn-primary">Save changes</button>
							      </div>
							    </div>
							  </div>
							</div>
				      <!-- Modal -->
				    	<div class="modal fade" id="<%=story.id%>" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
							  <div class="modal-dialog">
							    <div class="modal-content">
							      <div class="modal-header">
							        <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
							        <h4 class="modal-title" id="myModalLabel"><%=story.name%></h4><br>
							        <p><%=story.description%></p>
							      </div>
							      <div class="modal-body">
							     	<% story.tasks.each do |task| %>
							     		<form role="form" id="formcheck">
								      		<div class="checkbox">
								      			<label>
								      				<%if task.state == "to do"%>
												    		<%= check_box_tag task.id, "0", false, class: 'state', "elem-id" => task.id %> <p style="text-decoration:none"><%= task.description %></p>
												    	<%else %>
												    		<%= check_box_tag task.id, "0", true, class: 'state', "elem-id" => task.id %> <p style="text-decoration:line-through"><%= task.description %></p>
												    	<%end %>
												    	</label>
													</div>
								      </form>
							     	<%end%>
							     	<%= button_to 'Add Tasks', new_project_story_task_path(@project, story, Task.new), method: :get, class: 'btn btn-primary btn-lg btn-block', style: 'float:right;	background-color:#d9534f' %>
							     	<%= link_to "." %>
							     	<%= button_to 'Edit story', edit_project_story_path(@project, story), method: :get, class: 'btn btn-primary btn-lg btn-block', style: 'float:right;	background-color:#d9534f' %>
							      </div>
							      <br><br>
							      <div class="modal-footer">
							        <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
							        <button type="button" class="btn btn-primary">Save changes</button>
							      </div>
							    </div>
							  </div>
							</div>
				    <%end%>
		    <%end%>
	    </div>
	 </div>

