<h1>Listing stories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>State</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stories.each do |story| %>
      <tr>
        <td><%= story.name %></td>
        <td><%= story.description %></td>
        <td><%= story.state %></td>
        <td><%= link_to 'Show', project_stories_path %></td>
        <td><%= link_to 'Edit', edit_project_story_path(story.project, story) %></td>
        <td><%= link_to 'Destroy', [story.project, story], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Story', new_project_story_path %>
