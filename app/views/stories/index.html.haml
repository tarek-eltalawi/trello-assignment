%h1 Listing stories
%table
  %thead
    %tr
      %th Name
      %th Description
      %th State
      %th{:colspan => "3"}
  %tbody
    - @stories.each do |story|
      %tr
        %td= story.name
        %td= story.description
        %td= story.state
        %td= link_to 'Show', project_stories_path
        %td= link_to 'Edit', edit_project_story_path(story.project, story)
        %td= link_to 'Destroy', [story.project, story], method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Story', new_project_story_path
